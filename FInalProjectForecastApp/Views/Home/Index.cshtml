@model ForecastApp.ForecastAppModels.SearchCity

<div class="container">

    <form class="search-form" method="post">

        <div class="container">
            <div class="form-group">
                <h2 class="search-form-heading">Search the forecast in a city</h2>
                <label asp-for="CityName" style="font-family: Arial"></label>
                <input asp-for="CityName" class="form-control" />
                <span asp-validation-for="CityName" class="text-danger"></span>
            </div>
        </div>
        <div class="container">
            <div class="form-group align-center">
                <button asp-controller="ForecastApp" asp-action="SearchCity" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>

</div>